#QRate is moving sum
record(ai,"BR-BI{DCCT:1}QRate-I")
{
   field(DESC,"QRate with moving sum")
   field(INP,"BR-BI{DCCT:1}Buffer-aSub_.VALE")
   field(PREC,"3")
   field(EGU,"nC/s")
}

